# Database
DATABASE_URL=postgresql://user:password@localhost:5432/goaltracker?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI API
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview

# AI System Prompt (Optional - custom AI personality)
# AI_SYSTEM_PROMPT=Sen profesyonel ve yardımsever bir AI koçusun. Her zaman Türkçe konuş ve kullanıcıları hedeflerine ulaşmaları için destekle.

# Apple Push Notifications (Optional - for iOS notifications)
APNS_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_APNS_KEY_HERE\n-----END PRIVATE KEY-----
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.yourapp.goaltracker
APNS_PRODUCTION=false

# Server
PORT=3000
NODE_ENV=development

# Schedulers (set to false to disable cron jobs)
ENABLE_SCHEDULERS=true

